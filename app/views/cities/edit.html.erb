<%= render "shared/header" %>

<div class="container">
  <%= form_with method: :patch, scope: @city, url: city_edit_url(@city.id), local: false do |form| %>
    <div class="form-group">
    <%= form.label :name, 'Название' %>
    <%= form.text_field :name, class: "form-control" %>
    <small class="form-text text-muted">От 3 до 50 символов</small>
  </div>

    <div class="form-group">
      <%= form.label :region_id, 'Регион' %>
      <%= form.select(:region_id, options_for_select(@regions.map {|region| ["#{region.name} (#{region.country.name})", region.id]}), {}, {class: "form-control"}) %>
    </div>

    <%= form.submit 'Обновить', class: "btn btn-primary"%>
  <% end %>
</div>