<%= form_with method: :patch, scope: @region, url: region_edit_url(@region.id), local: true do |form| %>
  <p>
    <%= form.label :name, 'Название' %><br>
    <%= form.text_field :name%>
  </p>

  <p>
    <%= form.label :country_id, 'Страна' %><br>
    <%= form.select(:country_id, options_for_select(@countries.map {|country| ["#{country.name} (#{country.currency})", country.id]})) %>
  </p>

  <p>
    <%= form.submit 'Обновить' %>
  </p>
<% end %>