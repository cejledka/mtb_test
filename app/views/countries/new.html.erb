<%= render "shared/header" %>

<div class="container">
  <%= form_with scope: :country, url: country_new_url, local: false do |form| %>
    <div class="form-group">
      <%= form.label :name, 'Название' %>
      <%= form.text_field :name, class: "form-control" %>
      <small class="form-text text-muted">Название должно быть уникальным, от 3 до 35 символов</small>
    </div>

    <div class="form-group">
      <%= form.label :currency, 'Валюта'%>
      <%= form.text_field :currency, class: "form-control" %>
      <small class="form-text text-muted">Три прописные латинские буквы. Например: RUB</small>
    </div>

    <%= form.submit 'Добавить', class: "btn btn-primary"%>
  <% end %>
</div>